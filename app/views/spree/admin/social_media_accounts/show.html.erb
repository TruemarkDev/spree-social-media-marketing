<% content_for :page_title do %>
  <%= "#{ @social_media_account.display_type } Account" %>
  <%= "for #{ @social_media_account.name }" if @social_media_account.name.present? %>
<% end %>

<% content_for :page_actions do %>
  <% link_to 'Back To Accounts', admin_social_media_accounts_path %>
<% end %>

<% if @social_media_account.display_type == 'Facebook' %>
  <%= form_for [:admin, @social_media_account.pages.build] do |page_form| %>
    <%= page_form.label :page_id, 'Facebook Page Id' %>
    <%= page_form.text_field :page_id %>
    <%= page_form.hidden_field :account_id, value: @social_media_account.id %>
    <%= page_form.submit 'Add New Page', class: "btn-success", icon: 'add' %>
  <% end %>
  <div id="facebook-pages-list" data-hook>
    <table class="table" id='listing_facebook_pages' data-hook>
      <thead>
        <tr data-hook="social_media_account_header">
          <th><%= Spree.t(:page_name) %></th>
          <th class="actions">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if @social_media_account.pages.select { |page| page.persisted? }.empty? %>
          <tr><td colspan="3"><%= Spree.t(:none) %></td></tr>
        <% else %>
          <% @social_media_account.pages.select { |page| page.persisted? }.each do |page| %>
            <tr>
              <td>
                <%= page.page_name %>
              </td>
              <td>
                <div class="row">
                  <div class="col-md-12">
                    <%= link_to admin_facebook_page_path(page), method: :delete, class: 'btn btn-danger btn-sm icon-link with-tip action-delete no-text', data: { confirm: 'Are you sure you want to remove this page?' } do %>
                      <span class='icon icon-delete'></span>
                    <% end %>
                    <%= link_to admin_facebook_page_path(page), class: 'btn btn-primary btn-sm icon-link with-tip action-edit no-text' do %>
                      <span class='icon icon-edit'></span>
                    <% end %>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
<% elsif @social_media_account.display_type == 'Twitter' %>
  <div id='social-media-post-form'>
    <h4 class='text-success'>
      Post a message on this Twitter Account
    </h4>
    <hr/>
    <%= form_for [:admin, @social_media_account.posts.build] do |post_form| %>
      <%= render 'spree/admin/social_media_posts/form', { post_form: post_form, social_media_postable_id: @social_media_account.id, social_media_postable_type: 'Spree::SocialMediaAccount' } %>
    <% end %>
  </div>
  <div id="twitter-account-posts-list" data-hook>
    <h4>
      Recent Posts
    </h4>
    <% if @social_media_account.posts.select { |post| post.persisted? }.empty? %>
      <h5>You have no posts for this page.</h5>
    <% else %>
      <table class="table" id='listing_facebook_pages' data-hook>
        <thead>
          <tr data-hook="social_media_account_header">
            <th><%= Spree.t(:post) %></th>
            <th><%= Spree.t(:image) %></th>
            <th><%= Spree.t(:posted_at) %></th>
            <th class="actions">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @social_media_account.posts.select { |post| post.persisted? }.each do |post| %>
            <tr>
              <td>
                <%= post.post_message %>
              </td>
              <td>
                <%= image_tag post.images.first.attachment.url(:mini) if post.images.exists? %>
              </td>
              <td>
                <%= post.created_at.strftime('%m/%d/%Y %I:%M %p') %>
              </td>
              <td>
                <%= link_to admin_social_media_post_path(post), method: :delete, class: 'btn btn-danger btn-sm icon-link with-tip action-delete no-text', data: { confirm: 'Are you sure you want to remove this post?', remote: false } do %>
                  <span class='icon icon-delete'></span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
<% end %>
